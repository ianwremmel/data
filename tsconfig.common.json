{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/types",
    "resolveJsonModule": true,
    "strict": true,
    // Node 18 and later
    "target": "es2022",
    "types": [
      "node"
    ]
  }
}
